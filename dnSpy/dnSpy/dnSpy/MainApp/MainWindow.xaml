<ctrls:MetroWindow x:Class="dnSpy.MainApp.MainWindow"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctrls="clr-namespace:dnSpy.Contracts.Controls;assembly=dnSpy.Contracts.DnSpy"
        xmlns:img="clr-namespace:dnSpy.Contracts.Images;assembly=dnSpy.Contracts.DnSpy"
        xmlns:ds="clr-namespace:dnSpy.MainApp"
        Style="{StaticResource MainWindowStyle}"
        SystemMenuImage="{x:Static img:DsImages.Assembly}"
        Title="{x:Static ds:Constants.DnSpy}"
        MinWidth="250"
        MinHeight="200"
        Height="600" Width="1000">
    <ContentPresenter Name="contentPresenter" />
</ctrls:MetroWindow>
