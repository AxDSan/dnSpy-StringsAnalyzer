<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:baml="clr-namespace:dnSpy.BamlDecompiler"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:p="clr-namespace:dnSpy.BamlDecompiler.Properties;assembly=dnSpy.BamlDecompiler.x">
    <DataTemplate DataType="{x:Type baml:BamlSettings}">
        <Grid Margin="5">
            <StackPanel>
                <CheckBox Margin="0 5 0 0" IsChecked="{Binding NewLineOnAttributes}" Content="{x:Static p:dnSpy_BamlDecompiler_Resources.BamlSettings_NewLineOnAttributes}" />
                <CheckBox Margin="0 5 0 0" IsChecked="{Binding UseTabs}" Content="{x:Static p:dnSpy_BamlDecompiler_Resources.BamlSettings_UseTabs}" />
                <CheckBox Margin="0 5 0 0" IsChecked="{Binding DisassembleBaml}" Content="{x:Static p:dnSpy_BamlDecompiler_Resources.BamlSettings_DisassembleBAML}" />
            </StackPanel>
        </Grid>
    </DataTemplate>
</ResourceDictionary>
