<UserControl x:Class="dnSpy.Debugger.ToolWindows.Memory.MemoryControl"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mvvm="clr-namespace:dnSpy.Contracts.MVVM;assembly=dnSpy.Contracts.DnSpy">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <ContentPresenter Name="hexViewContentPresenter" IsEnabled="{Binding CanEditMemory}" />
        <Border Name="disabledControl" Focusable="True" IsEnabled="{Binding CanNotEditMemory}" FocusVisualStyle="{x:Null}" Background="{DynamicResource MemoryWindowDisabled}" Visibility="{Binding CanNotEditMemory, Converter={StaticResource BooleanToVisibilityConverter}}" mvvm:InitDataTemplateAP.Initialize="True" />
    </Grid>
</UserControl>
